
  <article>
    {{#if recipe}}
      {{#each recipe}}

        <h1> {{this.title}} </h1>

        <div class="recette">
          
          <div id="top"> <!-- le haut de la page-->

            <img src="/images/parDefault.png" alt="imagerecette" id="photo"> </img>

            <aside id="general">
              <p> Catégorie : {{this.category}} </p>
              <div class="rating">
                <p> Note :</p>
                  <div class="empty" name="rating" id="s1" onclick="clickstar(1);"><i class="far fa-star"></i></div>
                  <div class="empty" name="rating" id="s2" onclick="clickstar(2);"><i class="far fa-star"></i></div>
                  <div class="empty" name="rating" id="s3" onclick="clickstar(3);"><i class="far fa-star"></i></div>
                  <div class="empty" name="rating" id="s4" onclick="clickstar(4);"><i class="far fa-star"></i></div>
                  <div class="empty" name="rating" id="s5" onclick="clickstar(5);"><i class="far fa-star"></i></div>
              </div>
              <p>
                Temps de préparation : {{this.time}} minutes <br>
                Temps de cuisson : {{this.bakingTime}}  minutes <br>
                Outils : {{this.tools}}<br>
              </p>
            </aside>
          </div>

          <div id="middle"> <!-- le milieu de la page-->

            <!--Ingrédients-->
            <aside id="ingredients">
              <h3>Ingrédients :</h3>
              <pre>
                {{this.ingredients}}
              </pre>
            </aside> 

            <!--Etapes-->
            <div class="steps">
              <h3>Etapes :</h3>
              <pre>
                {{this.steps}}
              </pre>
            </div>
          </div>

      {{/each}}

    {{else}}

        <p> Cette recette n'existe pas. Voulez-vous l'ajouter ? </p>
        {{#if user}} Cliquez <a href="/newRecipe">ici</a>.
        {{else}}
          <p style="display : flex;">
            Connectez-vous et cliquez : <a href=# onclick="connectforrecipe()">ici</a>.
          </p>
        {{/if}}

    {{/if}}
  </article>
